{
    "name": "mvcarch/mvcarch",
    "description": "This is a basic framework with MVC architecture.",
    "keywords": [
        "web",
        "framework",
        "mvc"
    ],
    "type": "library",
    "homepage": "https://github.com/jlauza/mvcarch",
    "license": "MIT",
    "authors": [
        {
            "name": "Jayson Lauza",
            "email": "lauzajayson@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/database": "^10.14",
    },
    "autoload": {
        "psr-4": {
            "mcvarch\\": "app/"
        },
        "classmap": [
            "app/models",
            "app/controllers"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "mcvarch\\Tests\\": "tests/"
        }
    }
}

